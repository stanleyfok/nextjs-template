{
  "name": "nextjs-template",
  "version": "1.0.0",
  "description": "Nextjs project template",
  "repository": {
    "type": "git",
    "url": "git://github.com/stanleyfok/nextjs-template.git"
  },
  "scripts": {
    "dev": "node server.js",
    "build": "next build",
    "prestart": "next build",
    "start": "node server.js",
    "analyze": "ANALYZE=1 next build",
    "eslint": "./node_modules/.bin/eslint '**/*.js'",
    "eslint-fix": "./node_modules/.bin/eslint --fix '**/*.js'",
    "sasslint": "./node_modules/.bin/sass-lint -v -q",
    "cc": "rm -rf .next node_modules/.cache",
    "test": "NODE_ENV=test jest",
    "test-unit": "NODE_ENV=test jest unit",
    "test-int": "NODE_ENV=test jest int",
    "test-coverage": "NODE_ENV=test jest --coverage"
  },
  "author": "Stanley Fok <stanleyfok@gmail.com> (https://github.com/stanleyfok)",
  "license": "MIT",
  "dependencies": {
    "autoprefixer": "^7.2.4",
