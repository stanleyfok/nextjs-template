    "md5": "^2.2.1",
    "next": "^4.2.1",
    "node-sass": "^4.7.2",
    "nprogress": "^0.2.0",
    "postcss-easy-import": "^3.0.0",
    "postcss-loader": "^2.0.10",
    "prop-types": "^15.6.0",
    "raw-loader": "^0.5.1",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
